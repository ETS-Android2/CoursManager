<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.coursmanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Light">
        <activity
            android:name=".view.SettingsActivity"
            android:label="@string/title_activity_settings"/>
        <activity
            android:name=".view.ShufflePostCardActivity"
            android:label="@string/title_activity_shuffle_post_card" />
        <activity
            android:name=".view.LessonDetailPostActivity"
            android:label="@string/title_activity_lesson_detail_post"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".view.PlayPostCardActivity"
            android:label="@string/title_activity_play_post_card" />
        <activity
            android:name=".view.EditionPostCardActivity"
            android:label="@string/title_activity_edition_post_card"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".view.LessonActivity" />
        <activity
            android:name=".view.SubjectActivity" />
        <activity
            android:name=".view.UEActivity" />
        <activity
            android:name=".view.FolderActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>